<head>
	<% include ./../partials/header %>
	<link href="/assets/plugins/fileuploads/css/dropify.css" rel="stylesheet" type="text/css" />
	<style>
		td input {
			width: 100%;
			text-align: center;
			border: 1px #CCC solid;
 
		}
	 
	</style>
</head>

<body class="">
	<div id="global-loader"></div>
	<div class="page">
		<div class="page-main">
			<% include ./../partials/headerBar %>
			<% include ./../partials/navbar %>
		</div>
		<div class="my-3 my-md-5">
			<div class="container">
				<div class="page-header">
					<h4 class="page-title">Thêm đội tham gia</h4>
				</div>
				<div class="row">
					<div class="col-12">
						<form method="post" class="card" action="/admin/thi-sinh" enctype="multipart/form-data">
							<div class="card-header">
								<h3 class="card-title">Thông tin nhóm</h3>
							</div>
							<div class="card-body">
								<div class="row">
									<div class="col-md-12 col-lg-12">
										<div class="form-group">
											<label class="form-label">Tên nhóm</label>
											<input type="text" class="form-control" name="name" placeholder="Team's name">
										</div>
										<div class="form-group">
											<label class="form-label">Leader</label>
											<input type="email" class="form-control" name="emailLeader" placeholder="Email nhóm trưởng">
										</div>
										<div class="form-group">
												<label class="form-label" >Thông tin thành viên</label>
												<hr>
												<div class="table-responsive">
													<table
															id="example"
															class="table table-striped table-bordered"
															style="width:100%">
															<thead style="text-align: center;">
																<tr>
																	<th class="wc-15">Họ và tên</th>
																	<th class="wc-10">MSSV</th>
																	<th class="wc-10">Số điện thoại</th>
																	<th class="wc-15">Trường</th>
																</tr>
															</thead>
															<tbody>
																	<tr>
																		<td><input type="text" name="member.name" ></td>
																		<td><input type="text" name="member.MSSV" ></td>
																		<td><input type="text" name="member.phone" ></td>
																		<td><input type="text" name="member.school" ></td>
																	</tr>
															</tbody>
														</table>		
												</div>
												<hr>

												<div class="form-group">
														<span>Đóng lệ phí: </span>
														<input
															type="radio"
															name="isPaid"
															placeholder="Tiêu đề"
															value="false"
															checked
														/> Chưa đóng	  
														<input
															type="radio"
															name="isPaid"
															placeholder="Tiêu đề"
															value="true"
														/> Đã đóng
												</div>

										</div>
									</div>
									<div class="card-footer text-right">
										<div class="d-flex">
											<a href="/admin/thi-sinh" class="btn btn-link">Thoát</a>
											<button type="submit" class="btn btn-primary ml-auto">Tạo nhóm</button>
										</div>
									</div>
						</form>
					</div>

					<!--footer-->
					<% include ./../partials/footer %>
					<!-- End Footer-->
				</div>

				<!-- Back to top -->
				<a href="#top" id="back-to-top" style="display: inline;"><i class="fa fa-angle-up"></i></a>
				<!-- Dashboard Css -->
				<% include ./../partials/scripts %>

				<script>
					var y=1;
				</script>


</body>

