<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/header %>
    <link href="/assets/plugins/datatable/dataTables.bootstrap4.min.css" rel="stylesheet" />
  </head>
  <body class="">
    <div id="global-loader"></div>
    <div class="page">
      <div class="page-main">
        <% include ../partials/headerBar %>
        <% include ../partials/navbar %>
        <div class="my-3 my-md-5">
          <div class="container">
            <div class="page-header">
              <h4 class="page-title">Danh sách nhà tài trợ</h4>
            </div>
            <div class="row">
              <div class="col-md-12 col-lg-12">
                <div class="card">
                  <div class="card-header">
                    <div class="row" style="width: 100%">
                      <div class="col-md-6">
                        <div class="card-title">Nhà tài trợ</div>
                      </div>
                      <div class="col-md-6 text-right">
                        <a class="btn btn-outline-primary" href="/admin/nha-tai-tro/them">Thêm nhà tài trợ</a>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table
                        id="example"
                        class="table table-striped table-bordered"
                        style="width:100%">
                        <thead>
                          <tr>
                            <th class="wc-15">Tên nhà tài trợ</th>
                            <th class="wc-10">Logo</th>
                            <th class="wc-10">Liên hệ</th>
                            <th class="wc-10">Link</th>
                            <th class="wc-10">Tài trợ</th>
                            <th class="wc-10">Hành động</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% sponsors.map(item => { %>
                            <tr>
                            <td><%- item.name %></td>
                            <td class='text-center'><img style='max-width: 25%'src='<%- item.linkLogo %>'></td>
                            <td><%- item.contactInfo %></td>
                            <td><%- item.link %></td>
                            <td><%- item.sponsored %></td>
                            <td align="center" >
                              <a type="button" class="btn btn-icon btn-primary" href="/admin/nha-tai-tro/<%- item._id %>/sua"><i class="fe fe-edit"></i></a>
                              <button type="button" class="btn btn-icon btn-primary" data-toggle="modal" data-target="#deleteSponsor" onclick="selectedId('<%- item._id %>')"><i class="fe fe-trash"></i></button>
                            </td>
                          </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                  <!-- table-wrapper -->
                </div>
                <!-- section-wrapper -->
              </div>
            </div>
          </div>
        </div>
      </div>

      <% include ../partials/footer %>
    </div>

    <!-- Back to top -->
    <a href="#top" id="back-to-top" style="display: inline;"
      ><i class="fa fa-angle-up"></i
    ></a>
    <% include ../partials/scripts %>
    <% include ./delete %>
    <!-- Data tables -->
    <script>
      var selectedId = "";
    </script>
    <script src="/assets/plugins/datatable/jquery.dataTables.min.js"></script>
    <script src="/assets/plugins/datatable/dataTables.bootstrap4.min.js"></script>
    <script>
      
      $(function(e) {
        $("#example").DataTable();
      });
      function selectedId(id) {
        selectedId = id;
      }
      function deleteSponsor() {
        $.ajax({
          url: `/admin/nha-tai-tro/${selectedId}/xoa`,
          method: "DELETE",
          success: function(result) {
            location.reload();
          }
        })
      }
    </script>
  </body>
</html>
