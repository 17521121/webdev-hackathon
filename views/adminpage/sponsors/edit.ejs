<head>
	<% include ./../partials/header %>
	<link href="/assets/plugins/fileuploads/css/dropify.css" rel="stylesheet" type="text/css" />
</head>

<body class="">
	<div id="global-loader"></div>
	<div class="page">
		<div class="page-main">
			<% include ./../partials/headerBar %>
			<% include ./../partials/navbar %>
		</div>
		<div class="my-3 my-md-5">
			<div class="container">
				<div class="page-header">
					<h4 class="page-title">Sửa thông tin nhà tài trợ</h4>
				</div>
				<div class="row">
					<div class="col-12">
						<form method="post" class="card" action="/admin/nha-tai-tro/<%- sponsor._id %>/sua" enctype="multipart/form-data">
							<div class="card-header">
								<h3 class="card-title">Thông tin nhà tài trợ</h3>
							</div>
							<div class="card-body">
								<div class="row">
									<div class="col-md-12 col-lg-12">
										<div class="form-group">
											<label class="form-label">Tên nhà tài trợ</label>
											<input type="text" class="form-control" name="name" placeholder="Name" value="<%- sponsor.name %>">
										</div>
											<div class="form-group">
												<label class="form-label">Thông tin liên hệ</label>
												<input type="text" class="form-control" name="contactInfo" value="<%- sponsor.contactInfo %>" placeholder="Thông tin liên hệ">
											</div>
										<div class="form-group">
											<label class="form-label">Link trang chủ nhà tài trợ</label>
											<input class="form-control" name="link" placeholder="Link trang chủ nhà tài trợ" value='<%- sponsor.link %>'>
										</div>
										<div class="form-group">
											<label class="form-label">Tài trợ</label>
											<input type="text" class="form-control" name="sponsored" value='<%- sponsor.sponsored %>' placeholder="Tài trợ hiện kim hoặc hiện vật">
										</div>
									</div>
									<div class="card">
										<div class="card-header">
											<h3 class="card-title">Logo nhà tài trợ</h3>
										</div>
										<div class=" card-body">
											<div class="row">
												<div class="col-lg-4 col-sm-12">
												<input type="file" class="dropify" name="file" data-default-file="<%- sponsor.linkLogo %>" value="<%- sponsor.linkLogo %>"/>
												</div>
											</div>
										</div>
										<br>
										<div class="form-group">
											<div class="custom-file">
												<input type="file" class="custom-file-input" name="linkLogo">
												<label class="custom-file-label">Chọn hình</label>
											</div>
										</div>
									</div>
								</div>

								<div class="card-footer text-right">
									<div class="d-flex">
										<a href="javascript:void(0)" class="btn btn-link">Thoát</a>
										<button type="submit" id="submitEditData" class="btn btn-primary ml-auto">Lưu</button>
									</div>
								</div>
						</form>



					</div>

					<!--footer-->
					<% include ./../partials/footer %>
					<!-- End Footer-->
				</div>

				<!-- Back to top -->
				<a href="#top" id="back-to-top" style="display: inline;"><i class="fa fa-angle-up"></i></a>
				<!-- Dashboard Css -->
				<% include ./../partials/scripts %>
				<script src="/assets/plugins/datatable/jquery.dataTables.min.js"></script>
				<script src="/assets/plugins/datatable/dataTables.bootstrap4.min.js"></script>
				<script src="/assets/plugins/fileuploads/js/dropify.js"></script>
				<script src="/assets/js/sendLinkImage.js"></script>
				<script>
					$('.dropify').dropify({
						messages: {
							'default': 'Drag and drop a file here or click',
							'replace': 'Drag and drop or click to replace',
							'remove': 'Remove',
							'error': 'Ooops, something wrong appended.'
						},
						error: {
							'fileSize': 'The file size is too big (2M max).'
						}
					});
				</script>

</body>

